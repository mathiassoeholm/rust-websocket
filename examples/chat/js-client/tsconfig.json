{
  "include": ["src", "types"],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "baseUrl": "./",

    /* noEmit - Snowpack builds (emits) files, not tsc. */
    "noEmit": true,

    /* Additional Options */
    "strict": true,
    "skipLibCheck": true,
    "types": ["snowpack-env"],
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error"
  }
}
